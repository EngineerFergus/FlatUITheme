<UserControl x:Class="ShowCase.Views.ButtonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShowCase.Views"
             xmlns:viewmodels="clr-namespace:ShowCase.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:ButtonsViewModel/>
    </UserControl.DataContext>
    
    <StackPanel MaxWidth="100">
        <Button x:Name="WhiteButton"
                Style="{StaticResource WhiteButton}"
                Content="Click Me"/>
        <Button x:Name="BlueButton"
                Style="{StaticResource BlueButton}"
                Content="Click Me"/>
        <Button x:Name="RedButton"
                Style="{StaticResource RedButton}"
                Content="Click Me"/>
        <Button x:Name="PurpleButton"
                Style="{StaticResource PurpleButton}"
                Content="Click Me"/>
    </StackPanel>
</UserControl>
